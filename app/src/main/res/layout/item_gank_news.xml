<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_gank_news_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/android_splash"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/item_gank_news_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_gank_news_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:textSize="13sp"
                tools:text="RxJava"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/item_gank_news_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/item_gank_news_author"
                android:ellipsize="end"
                android:textSize="18sp"
                tools:text="RxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJava"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>