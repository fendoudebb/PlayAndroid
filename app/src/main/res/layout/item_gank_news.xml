<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardCornerRadius="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_gank_news_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/item_gank_news_author"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_gank_news_pic"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="RxJavaRxJavaRxJavaRxJavaRxJavaRxJadadasdasdasvaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJavaRxJava"/>

        <TextView
            android:id="@+id/item_gank_news_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/item_gank_news_title"
            app:layout_constraintRight_toRightOf="@id/item_gank_news_title"
            app:layout_constraintTop_toBottomOf="@id/item_gank_news_title"
            tools:text="RxJava11111111111111111111111111112222222222222111111111"/>

        <ImageView
            android:id="@+id/item_gank_news_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_gank_news_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/android_splash"
            tools:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>